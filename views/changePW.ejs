<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/style.css">
</head>
<body>
    <%- include('partials/nav', {isAdmin: isAdmin}) %>
    <div class="container">
        <section class="login-section">
            <div class="login-box">
                <h2 class="blue">Cambiar Password</h2>
                <%if(hasChangedPW == false) {%>
                    <p>
                        <b>
                            Es necesario cambiar la password la primera vez que se ejecute el login
                        </b>
                    </p>
                <%}%>
                <form>
                    <%- include('partials/label', {text: "Vieja Password", icon: "fas fa-key"}) %>
                    <input type="password" id="oldPw" placeholder="m1_vieja_password" required>
                    <%- include('partials/divider') %>
                    <%- include('partials/label', {text: "Nueva Password", icon: "fas fa-key"}) %>
                    <input type="password" id="newPw" placeholder="m1_nueva_password" required>
                    <%- include('partials/divider') %>
                    <%- include('partials/label', {text: "Repetir Nueva Password", icon: "fas fa-key"}) %>
                    <input type="password" id="newPwRep" placeholder="m1_nueva_password" required>
                    <%- include('partials/divider') %>
                    <%- include('partials/feedbacks') %>
                    <%- include('partials/divider') %>
                    <%- include('partials/spinner') %>
                    <%- include('partials/divider') %>
                    <%- include('partials/btn', {id: "changePwBTN", icon:"", text:"Cambiar"}) %>
                </form>
            </div>
        </section>
    </div>
    <script src="assets/js/main.js" type="module"></script>
    <script src="assets/js/changePW.js" type="module"></script>
</body>
</html>